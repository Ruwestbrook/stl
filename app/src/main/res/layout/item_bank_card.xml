<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_credit_item"
    android:layout_height="100dp">
    
    <ImageView
        android:layout_width="88dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_bg_bank_card"
        android:layout_height="88dp" />

    <ImageView
        android:layout_width="28dp"
        app:layout_constraintTop_toTopOf="@id/bank_name"
        app:layout_constraintBottom_toBottomOf="@id/card_type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:src="@drawable/test_icon_bank"
        android:layout_height="28dp" />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        style="@style/text_34_17"
        android:layout_marginLeft="57dp"
        android:includeFontPadding="false"
        android:text="@string/test_bank_name"
        android:id="@+id/bank_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="10sp"
        android:textColor="@color/text_color_34"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/card_type"
        android:text="@string/test_bank_type"
        app:layout_constraintLeft_toLeftOf="@id/bank_name"
        app:layout_constraintTop_toBottomOf="@id/bank_name"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="17dp"
        style="@style/text_34_17"
        android:id="@+id/card"
        android:text="@string/test_bank_id"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp" />

</androidx.constraintlayout.widget.ConstraintLayout>