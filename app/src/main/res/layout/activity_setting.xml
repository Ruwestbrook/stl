<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color_f8"
    android:layout_height="match_parent"
    tools:context=".module.user.ui.activity.SettingActivity">

    <include layout="@layout/title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:onClick="setPayPwd"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_mine_setting_set_pws"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:id="@+id/pwd_title"
            android:textColor="@color/text_color_34"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/mine_settings_set_pwd"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_enter"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/bg_color_f8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:onClick="aboutUs"
        android:paddingRight="15dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_mine_setting_aboutus"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_color_34"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/mine_settings_about"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_enter"
            android:layout_height="wrap_content" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/bg_color_f8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="2dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:onClick="idea"
        android:paddingRight="15dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_mine_setting_feedback"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_color_34"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/mine_settings_idea"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_enter"
            android:layout_height="wrap_content" />



    </androidx.constraintlayout.widget.ConstraintLayout>



    <View
        android:layout_width="match_parent"
        android:background="@color/bg_color_f8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="2dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_mine_setting_set"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_color_34"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/mine_settings_about_version"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/version"
            android:textColor="@color/text_color_9a"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:onClick="exit"
        android:background="@drawable/primary_button_selector"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/mine_settings_exit"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />
</LinearLayout>