<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:scrollbars="none"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:background="@color/app_base_color"
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:id="@+id/app_name_img"
                    android:src="@drawable/icon_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp" />

                <TextView
                    app:layout_constraintTop_toTopOf="@id/app_name_img"
                    app:layout_constraintBottom_toBottomOf="@id/app_name_img"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    style="@style/right_explain"
                    android:layout_marginEnd="15dp" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/app_name_img"
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">


                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/bg_home_login"
                        android:layout_width="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/login"
                        android:layout_height="18dp"
                        android:layout_marginEnd="15dp"
                        tools:ignore="SmallSp" />

                    <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="13dp"
                        style="@style/white_12"
                        android:id="@+id/advantage_one"
                        android:text="@string/advantage_1"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="15dp"
                        tools:ignore="MissingConstraints" />

                    <View
                        app:layout_constraintLeft_toRightOf="@id/advantage_one"
                        android:layout_marginLeft="9dp"
                        android:layout_height="10dp"
                        android:layout_width="1dp"
                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/advantage_one"
                        app:layout_constraintTop_toTopOf="@id/advantage_one" />


                    <TextView
                        app:layout_constraintLeft_toRightOf="@id/advantage_one"
                        android:layout_marginLeft="19dp"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/advantage_one"
                        style="@style/white_12"
                        android:id="@+id/advantage_two"
                        android:text="@string/advantage_1"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="19dp" />

                    <View
                        app:layout_constraintLeft_toRightOf="@id/advantage_two"
                        android:layout_marginLeft="9dp"
                        android:layout_height="10dp"
                        android:layout_width="1dp"
                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/advantage_two"
                        app:layout_constraintTop_toTopOf="@id/advantage_two"
                        android:layout_marginStart="9dp" />

                    <TextView
                        app:layout_constraintLeft_toRightOf="@id/advantage_two"
                        android:layout_marginLeft="19dp"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/advantage_two"
                        style="@style/white_12"
                        android:text="@string/advantage_1"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="19dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/app_name_img"
                    android:layout_marginTop="13dp"
                    style="@style/normalLeftRightMargin"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/notice_img"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:src="@drawable/icon_home_notice"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        style="@style/white_12"
                        app:layout_constraintLeft_toRightOf="@id/notice_img"
                        android:layout_marginLeft="6dp"
                        android:text="@string/audit_success"
                        android:layout_height="match_parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/test_normal_money"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:id="@+id/max_quota"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/max_quota"
                    app:layout_constraintTop_toBottomOf="@id/max_quota"
                    style="@style/con_center_horizontal"
                    android:textSize="11sp"
                    android:id="@+id/text_max_quota"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints,SmallSp" />


                <View
                    android:layout_width="1dp"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/text_max_quota"
                    android:layout_marginTop="26dp"
                    android:id="@+id/flag_view"
                    style="@style/con_center_horizontal"
                    android:layout_height="30dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/flag_view"
                    app:layout_constraintRight_toLeftOf="@id/flag_view"
                    android:layout_marginRight="22dp"
                    android:id="@+id/text_day_rate"
                    android:text="@string/day_rate_low"
                    style="@style/white_14"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/white_14"
                    android:text="@string/normal_term"
                    app:layout_constraintBottom_toBottomOf="@id/flag_view"
                    app:layout_constraintLeft_toRightOf="@id/flag_view"
                    android:layout_marginLeft="22dp"
                    android:id="@+id/text_term"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/test_day_rate"
                    app:layout_constraintLeft_toLeftOf="@id/text_day_rate"
                    app:layout_constraintBottom_toTopOf="@id/text_day_rate"
                    android:layout_marginBottom="7dp"
                    style="@style/white_14"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/test_term_data"
                    app:layout_constraintLeft_toLeftOf="@id/text_term"
                    app:layout_constraintBottom_toTopOf="@id/text_term"
                    android:layout_marginBottom="7dp"
                    style="@style/white_14"
                    android:layout_height="wrap_content" />


                <TextView
                    android:background="@drawable/bg_home_loan_button"
                    android:layout_width="191dp"
                    android:textColor="@color/app_base_color"
                    android:textSize="16sp"
                    style="@style/con_center_horizontal"
                    app:layout_constraintTop_toBottomOf="@id/flag_view"
                    android:layout_marginTop="34dp"
                    android:text="@string/loan_money"
                    android:gravity="center"
                    android:layout_height="42dp"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="match_parent"
                android:text="banner图"
                android:textSize="70sp"
                android:gravity="center"
                android:layout_height="110dp" />


            <TextView
                android:layout_width="match_parent"
                android:text="@string/app_use_explain"
                android:textSize="19sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color_34"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="@string/app_use_explain_tips"
                android:textSize="11sp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color_8b"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="20dp"
                style="@style/normalLeftRightMargin"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/icon_loan_explain"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/loan_tips"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_34"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="19dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/tips_more"
                        android:textSize="9sp"
                        android:textColor="@color/text_color_8b"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="38dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/icon_repay_explain"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/replay_tips"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_34"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="19dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/tips_more"
                        android:textSize="9sp"
                        android:textColor="@color/text_color_8b"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="38dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/icon_quota_explain"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/quota_tips"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_34"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="19dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/tips_more"
                        android:textSize="9sp"
                        android:textColor="@color/text_color_8b"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="38dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                style="@style/footer_style"
                android:layout_marginTop="45dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>
</layout>
